<style>
  /* Styles for disabled admin sections */
  .section-disabled {
    position: relative;
    opacity: 0.7;
    pointer-events: none;
  }
  
  .section-disabled::before {
    content: "Locked";
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: #f8d7da;
    color: #721c24;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 12px;
    z-index: 10;
  }
  
  .section-disabled::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(255, 255, 255, 0.3);
    z-index: 1;
    pointer-events: none;
    border: 1px dashed #ccc;
    border-radius: 4px;
  }
  
  .section-disabled input,
  .section-disabled select {
    cursor: not-allowed;
  }

  /* Buttons are hidden in disabled sections, so no need for cursor styling */
  
  .disabled {
    opacity: 0.6;
    cursor: not-allowed !important;
  }
  
  /* Exception for lock controls */
  .schedule-lock-controls {
    opacity: 1 !important;
    pointer-events: all !important;
  }
  
  .schedule-lock-controls button {
    cursor: pointer !important;
  }

  /* Enhanced loading indicators for ALL buttons */
  .btn-spinner {
    display: none;
    align-items: center;
    gap: 8px;
    font-size: 14px;
  }

  /* CSS-based spinner icon - more reliable than SVG */
  .spinner-icon {
    width: 16px;
    height: 16px;
    border: 2px solid transparent;
    border-top: 2px solid currentColor;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    flex-shrink: 0;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Button loading states - only for buttons that are actively loading */
  .btn.loading {
    opacity: 0.8;
    cursor: not-allowed !important;
    position: relative;
  }

  .btn.loading .btn-text {
    display: none;
  }

  .btn.loading .btn-spinner {
    display: flex;
  }

  /* Disabled buttons (locked forms) - different from loading buttons */
  .btn:disabled {
    opacity: 0.6;
    cursor: not-allowed !important;
    /* Keep original colors, no special styling */
  }

  /* Don't show spinners on disabled buttons (locked forms) */
  .btn:disabled .btn-spinner {
    display: none !important;
  }

  /* Subtle pulse animation for loading text */
  .btn.loading .btn-spinner {
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
  }

  /* Override pulse for spinner icon to keep it spinning */
  .btn.loading .spinner-icon {
    animation: spin 1s linear infinite;
  }
</style>

<script>
  // Inline the schedule-lock.ts functionality to ensure it's available
  document.addEventListener('DOMContentLoaded', function() {
    // Only initialize if we're on the admin page and logged in
    const checkForAdmin = setInterval(() => {
      const adminContent = document.getElementById('adminContent');
      if (adminContent && !adminContent.classList.contains('hidden')) {
        clearInterval(checkForAdmin);
        initScheduleLockUI();
      }
    }, 500); // Check every 500ms
  });

  async function initScheduleLockUI() {
    // Create a new section for schedule lock controls
    const adminContainer = document.querySelector('.admin-container');
    const pricingSection = document.querySelector('.pricing-section');
    
    if (!adminContainer || !pricingSection) {
      console.error('Required elements not found');
      return;
    }
    
    // Create the schedule lock section
    const lockSection = document.createElement('div');
    lockSection.className = 'admin-section schedule-lock-section';
    lockSection.innerHTML = `
      <h2>Schedule Lock Controls</h2>
      <div class="schedule-lock-controls">
        <div class="lock-status-indicator">
          <div class="lock-status-display">
            <span class="status-text">
              Bookings are
              <span class="unlock-status">enabled</span>
              <span class="lock-status hidden">disabled</span>
            </span>
            <span class="status-indicator unlocked"></span>
          </div>
          <p class="status-description">Customers can currently make bookings. Disable bookings to make schedule changes.</p>
        </div>
        
        <div class="lock-action-buttons">
          <button id="lockScheduleBtn" class="btn btn-warning" onclick="lockSchedule()">
            Disable Bookings to Edit Schedule
          </button>


        </div>
        
        <div id="scheduleLockMessage" class="hidden"></div>
      </div>
      

    `;
    
    // Insert the lock section after the pricing section
    adminContainer.insertBefore(lockSection, pricingSection.nextSibling);
    
    // Set up event handlers
    setupLockEventHandlers();

    // Default state: forms are locked (safe state)
    enableAllFormInputs(false);

    // Quietly check if bookings are currently disabled (no error messages)
    setTimeout(() => checkLockStatusQuietly(), 500);
  }

  function setupLockEventHandlers() {
    // Lock Schedule button
    document.getElementById('lockScheduleBtn')?.addEventListener('click', lockSchedule);
    

    

  }

  async function checkLockStatusQuietly() {
    try {
      const response = await fetch('/api/admin/schedule-lock');

      if (response.ok) {
        const data = await response.json();

        if (data.isLocked) {
          // Bookings are currently disabled, unlock forms for editing
          updateLockStatusUI(true);
          enableAllFormInputs(true);
          showLockMessage('Bookings are currently disabled. You can edit the schedule or re-enable bookings.', 'success');
        } else {
          // Bookings are enabled, keep forms locked (safe state)
          updateLockStatusUI(false);
          enableAllFormInputs(false);
        }
      }
      // If API fails, silently keep default state (forms locked)
    } catch (error) {
      // Silently fail - keep default state (forms locked)
      console.log('Could not check lock status, keeping forms locked for safety');
    }
  }

  function updateLockStatusUI(isLocked: boolean) {
    const unlockStatusText = document.querySelector('.unlock-status');
    const lockStatusText = document.querySelector('.lock-status');
    const statusIndicator = document.querySelector('.status-indicator');
    const statusDescription = document.querySelector('.status-description');
    const lockButton = document.getElementById('lockScheduleBtn');

    // Update status text and indicator
    if (unlockStatusText && lockStatusText && statusIndicator && statusDescription) {
      if (isLocked) {
        // Bookings are disabled (locked)
        unlockStatusText.classList.add('hidden');
        lockStatusText.classList.remove('hidden');
        statusIndicator.classList.remove('unlocked');
        statusIndicator.classList.add('locked');
        statusDescription.textContent = 'Customer bookings are disabled. You can safely edit the schedule.';
      } else {
        // Bookings are enabled (unlocked)
        unlockStatusText.classList.remove('hidden');
        lockStatusText.classList.add('hidden');
        statusIndicator.classList.remove('locked');
        statusIndicator.classList.add('unlocked');
        statusDescription.textContent = 'Customers can currently make bookings. Disable bookings to make schedule changes.';
      }
    }

    // Update button text and style
    if (lockButton) {
      if (isLocked) {
        lockButton.textContent = 'Re-enable Bookings';
        lockButton.classList.remove('btn-warning');
        lockButton.classList.add('btn-success');
      } else {
        lockButton.textContent = 'Disable Bookings to Edit Schedule';
        lockButton.classList.remove('btn-success');
        lockButton.classList.add('btn-warning');
      }
    }
  }

  // Simple button loading helper for lock button
  function setLockButtonLoading(loading: boolean) {
    const button = document.getElementById('lockScheduleBtn') as HTMLButtonElement;
    if (!button) return;

    if (loading) {
      button.disabled = true;
      button.classList.add('loading');
    } else {
      button.disabled = false;
      button.classList.remove('loading');
    }
  }

  async function lockSchedule() {
    try {
      setLockButtonLoading(true);

      // Check current lock status to determine action
      const statusResponse = await fetch('/api/admin/schedule-lock');

      if (!statusResponse.ok) {
        throw new Error(`Failed to get lock status: HTTP ${statusResponse.status}`);
      }

      const statusData = await statusResponse.json();
      const isCurrentlyLocked = statusData.isLocked;

      // Toggle the lock state
      const action = isCurrentlyLocked ? 'unlock' : 'lock';

      const response = await fetch('/api/admin/schedule-lock', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ action })
      });

      if (!response.ok) {
        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
      }

      const result = await response.json();

      if (result && result.success) {
        if (action === 'lock') {
          // Bookings are now disabled, enable forms for editing
          updateLockStatusUI(true);
          enableAllFormInputs(true);
          showLockMessage('Bookings disabled. You can now safely edit the schedule.', 'success');
        } else {
          // Bookings are now enabled, disable forms (safe state)
          updateLockStatusUI(false);
          enableAllFormInputs(false);
          showLockMessage('Bookings re-enabled. Schedule editing is now locked for safety.', 'success');
        }
      } else {
        throw new Error(result?.error || `Failed to ${action} bookings`);
      }
    } catch (error) {
      console.error('Error toggling schedule lock:', error);
      showLockMessage(`Error: ${error.message || 'Unknown error occurred'}`, 'error');
    } finally {
      setLockButtonLoading(false);
    }
  }







  function enableAllFormInputs(enabled: boolean) {
    // Schedule settings
    const scheduleInputs = [
      '#maxBookings',
      '#maxVisitors',
      '#maxVisitorPassesPerBooking',
      '#operatingDays .toggle-chip',
      '#timeSlotsGrid .time-slot-chip',
      '#seasonStartMonth',
      '#seasonStartDay',
      '#seasonEndMonth',
      '#seasonEndDay'
    ];
    
    // Holiday management
    const holidayInputs = [
      '#holidayDate',
      '#holidayName',
      '#addHoliday',
      '#generateHolidays'
    ];
    
    // Booking range status
    const bookingRangeInputs = [
      '#extendRange',
      '#forceRefresh'
    ];
    
    // Apply disabled/enabled state to all form sections
    const allInputs = [...scheduleInputs, ...holidayInputs, ...bookingRangeInputs];
    
    allInputs.forEach(selector => {
      document.querySelectorAll(selector).forEach(el => {
        if (el instanceof HTMLInputElement || el instanceof HTMLButtonElement || el instanceof HTMLSelectElement) {
          el.disabled = !enabled;
        }
        if (!enabled) {
          el.classList.add('disabled');
        } else {
          el.classList.remove('disabled');
        }
      });
    });
    
    // Apply visual indication to admin sections, except pricing section
    document.querySelectorAll('.admin-section').forEach(section => {
      // Skip the pricing section - it should always be enabled
      if (section.querySelector('h2')?.textContent?.includes('Pricing Settings')) {
        return;
      }
      
      if (!enabled) {
        section.classList.add('section-disabled');
      } else {
        section.classList.remove('section-disabled');
      }
    });
  }

  function showLockMessage(message: string, type: 'success' | 'error') {
    const messageEl = document.getElementById('scheduleLockMessage');
    if (messageEl) {
      messageEl.textContent = message;
      messageEl.className = type === 'success' ? 'success-message' : 'error-message';
      messageEl.classList.remove('hidden');

      // Auto-hide after 5 seconds
      setTimeout(() => {
        messageEl.classList.add('hidden');
      }, 5000);
    } else {
      // Fallback: show alert if message element doesn't exist
      alert(`${type.toUpperCase()}: ${message}`);
    }
  }




</script>


