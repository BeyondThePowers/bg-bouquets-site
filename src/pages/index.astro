				closeExperienceModal();
			}
		});

		// Close modal on escape key
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape' && experienceModal.classList.contains('show')) {
				closeExperienceModal();
			}
		});

		// Add click listeners to all experience images
		document.addEventListener('click', (e) => {
			if (e.target.classList.contains('experience-image')) {
				const fullSrc = e.target.dataset.fullSrc;
				const alt = e.target.alt;
				openExperienceModal(fullSrc, alt);
			}
		});
	}

	function openExperienceModal(imageSrc, imageAlt) {
		if (!experienceModal || !experienceModalImage || !experienceModalSkeleton) return;

		// Show modal
		experienceModal.classList.add('show');
		document.body.style.overflow = 'hidden'; // Prevent background scrolling

		// Show skeleton loader
		experienceModalSkeleton.classList.remove('hidden');
		experienceModalSkeleton.classList.add('experience-skeleton');
		experienceModalImage.classList.add('hidden');

		// Load full-size image
		const fullImage = new Image();
		fullImage.onload = () => {
			// Hide skeleton and show image
			experienceModalSkeleton.classList.add('hidden');
			experienceModalSkeleton.classList.remove('experience-skeleton');

			experienceModalImage.src = imageSrc;
			experienceModalImage.alt = imageAlt;
			experienceModalImage.classList.remove('hidden');
		};

		fullImage.onerror = () => {
			// Hide skeleton on error
			experienceModalSkeleton.classList.add('hidden');
			experienceModalSkeleton.classList.remove('experience-skeleton');
		};

		fullImage.src = imageSrc;
	}

	function closeExperienceModal() {
		if (!experienceModal) return;

		experienceModal.classList.remove('show');
		document.body.style.overflow = ''; // Restore scrolling

		// Reset modal content
		if (experienceModalImage) {
			experienceModalImage.src = '';
			experienceModalImage.alt = '';
		}
	}

	function setupExperienceLazyLoading() {
		// Use intersection observer to lazy load gallery when it comes into view
		if ('IntersectionObserver' in window) {
			const galleryObserver = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						// Gallery is visible, images will load via their loading="lazy" attribute
						galleryObserver.unobserve(entry.target);
					}
				});
			}, {
				rootMargin: '200px 0px' // Start loading 200px before gallery enters viewport
			});

			const experienceGallery = document.querySelector('.experience-gallery');
			if (experienceGallery) {
				galleryObserver.observe(experienceGallery);
			}
		}
