			}

			// Fill remaining cells with next month days to complete 6 weeks (42 total cells)
			const totalCells = 42;
			const cellsUsed = firstDay + daysInMonth;
			const remainingCells = totalCells - cellsUsed;

			for (let day = 1; day <= remainingCells; day++) {
