			stepsContainer.classList.add(`show-step-${stepNumber}`);

			// Update step indicators
			updateStepIndicators(stepNumber);

			// Update aria attributes and focusable elements for accessibility
			steps.forEach((step, index) => {
				if (index + 1 === stepNumber) {
					step.setAttribute('aria-hidden', 'false');
					step.classList.add('active');
					// Enable focusable elements in active step
					const focusableElements = step.querySelectorAll('input, select, button, textarea, [tabindex]');
					focusableElements.forEach(el => {
						el.removeAttribute('tabindex');
						(el as HTMLElement).removeAttribute('inert');
					});
				} else {
					step.setAttribute('aria-hidden', 'true');
					step.classList.remove('active');
					// Disable focusable elements in hidden steps
					const focusableElements = step.querySelectorAll('input, select, button, textarea, [tabindex]:not([tabindex="-1"])');
					focusableElements.forEach(el => {
						(el as HTMLElement).setAttribute('tabindex', '-1');
